{
  "compilerOptions": {
    "target": "es2021",
    "module": "none",
    "moduleResolution": "classic",
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "typeAcquisition": {
    "include": ["chrome"]
  },
  "include": [
    "*.js",
    "**/*.js",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
